{
  "name": "xecours",
  "version": "1.0.0",
  "description": "Serving static files",
  "main": "build/server.js",
  "scripts": {
    "build:client": "esbuild src/index.jsx --bundle --outfile=dist/bundle.js --loader:.js=jsx",
    "build:server": "esbuild server.js --bundle --outfile=build/server.js --platform=node --loader:.js=jsx",
    "build": "npm run build:client && npm run build:server",
    "start": "node build/server.js",
    "production": "npm run build && npm run start",
    "dev": "DEBUG=1 nodemon --exec \"npm run build && node build/server.js\" --watch ../ --ext js,jsx,json --ignore node_modules --ignore build --ignore dist"
  },
  "author": "Ahmed Abderraziq",
  "license": "ISC",
  "dependencies": {
    "esbuild": "^0.14.22",
    "express": "^4.17.3",
    "express-fileupload": "^1.3.1",
    "jsonwebtoken": "^8.5.1",
    "mysql": "^2.18.1",
    "node-fetch": "^3.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
